<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1sp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/background_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/cancel" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/forground_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"

        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/linear_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:id="@+id/liner_new"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@color/green2"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"
                    android:text="New"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <RelativeLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view_color"
                    android:layout_width="5sp"
                    android:layout_height="70sp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/green" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp">

                    <ImageView
                        android:id="@+id/iv_order"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="top"
                        android:visibility="gone"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/ic_add" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/rounded_border_green"
                            android:gravity="center"
                            android:maxLines="1"
                            android:maxLength="8"
                            android:ellipsize="end"
                            android:text="45:67"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="3dp"
                            android:gravity="left"
                            android:text="2020-05-04"
                            android:textSize="10dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="jkdslfd fdsjkfdns"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_ordernumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34324"
                            android:textColor="@color/red"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView

                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="30"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:text="sbkbkjbdkjbddddddddddd"
                            android:textSize="12dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans"
                            android:gravity="center"
                            android:textColor="#2F9333"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/foodtype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/view_deatils"
                    android:layout_width="100sp"
                    android:layout_height="40dp"
                    android:background="@drawable/boder_sky_blue"
                    android:gravity="center"
                    android:text="View Details"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>