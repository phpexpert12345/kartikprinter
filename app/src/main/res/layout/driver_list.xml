<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="20dp"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/tv_customer_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_customer_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="17sp"
                        android:gravity="top"
                        android:textColor="@color/black"
                        android:singleLine="false"
                        android:maxLines="2"
                        android:padding="5dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txtstatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="0000.5 millex"
                        android:textSize="17sp"
                        android:gravity="right"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:singleLine="false"
                        android:maxLines="2"
                        android:padding="5dp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lllll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/tv_customer_name1"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/imgdriver"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.5"
                        android:padding="5dp"/>

                    <LinearLayout
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtridername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:gravity="top"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="17sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/txtlicenceno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:gravity="top"
                            android:padding="5dp"
                            android:singleLine="false"
                            android:maxLines="4"
                            android:textSize="14sp"/>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_below="@+id/lllll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/button_view"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/viewdriver"
                            android:textColor="@color/white"
                            android:gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View Rider"
                            android:layout_below="@+id/button_view"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:paddingTop="5dp"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/button_delete"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/deletedriver"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delete Rider"
                            android:layout_below="@+id/button_delete"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:paddingTop="5dp"/>

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/button_update"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/editdriver"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Update Rider"
                            android:layout_below="@+id/button_update"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:paddingTop="5dp"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/button_call"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/calldriover"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Call Rider"
                            android:layout_below="@+id/button_call"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:paddingTop="5dp"/>

                    </RelativeLayout>


                </LinearLayout>



            </RelativeLayout>





        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>