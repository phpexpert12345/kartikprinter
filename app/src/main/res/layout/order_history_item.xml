<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/content_ll"
            android:layout_margin="10dp"
            android:clickable="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Order No :62656265656"
                android:id="@+id/order_no_tv"
                android:fontFamily="@font/opensans"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="22 June 2019 11:12PM"
                android:textSize="14dp"
                android:fontFamily="@font/opensans"
                android:id="@+id/date_tv"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_iv"
                        android:layout_width="70dp"
                        android:src="@drawable/logo_color"
                        android:layout_height="70dp"

                        />
                    <ProgressBar
                        android:layout_width="35dp"
                        android:id="@+id/progress_bar"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:layout_height="35dp"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Pending"
                        android:fontFamily="@font/opensans"
                        android:id="@+id/status_tv"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/opensans"
                        android:text="Chicken Drumsticks 1Kg."
                        android:id="@+id/product_tv"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#ddd"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Total Amount"
                        android:fontFamily="@font/opensans"
                        android:textSize="12dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="\u20b9 250"
                        android:fontFamily="@font/opensans"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:id="@+id/amount_tv"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/driver_rating_ll"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="10dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/opensans"
                            android:text="Delivery Person Rating"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:src="@drawable/star_ic"
                                    android:layout_height="20dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="4"
                                    android:fontFamily="@font/opensans"
                                    android:id="@+id/driver_star_tv"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                            <View
                                android:layout_width="1dp"
                                android:background="@color/black"
                                android:layout_height="20dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Loved "
                                android:fontFamily="@font/opensans"
                                android:id="@+id/driver_status_tv"
                                android:layout_gravity="center_vertical"
                                android:textSize="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/order_rating_ll"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="10dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/opensans"
                            android:text="Your Order Rating"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:src="@drawable/star_ic"
                                    android:layout_height="20dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="4"
                                    android:fontFamily="@font/opensans"
                                    android:id="@+id/order_star_tv"
                                    android:layout_marginLeft="5dp"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                            <View
                                android:layout_width="1dp"
                                android:background="@color/black"
                                android:layout_height="20dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_gravity="center_vertical"
                                android:text="Good"
                                android:fontFamily="@font/opensans"
                                android:id="@+id/order_status_tv"
                                android:textSize="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#ddd"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"

                android:layout_height="40dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Status : "
                        android:fontFamily="@font/opensans"
                        android:gravity="center"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Order Placed"
                        android:textStyle="bold"
                        android:fontFamily="@font/opensans"
                        android:id="@+id/status_tv1"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Cancel"
                    android:fontFamily="@font/opensans"

                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/cancel_tv"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>