<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"

        android:id="@+id/background_rl"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/cancel"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="5dp"
        android:id="@+id/forground_card"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="70dp"
                    android:scaleType="centerCrop"
                    android:layout_height="70dp"
                    android:id="@+id/iv_image"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:id="@+id/name_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="55dp"
                                android:text="Chicken"
                                android:textStyle="bold"
                                android:textColor="@color/green" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/cancel"
                                android:id="@+id/iv_clear"
                                android:visibility="gone"
                                android:tint="@color/colorAccent"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:id="@+id/weight_tv"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="\u20b9 300.00"
                                android:id="@+id/price_tv"

                                android:layout_gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="\u20b9 400.00"

                                android:layout_marginLeft="20dp"
                                android:id="@+id/oldprice_tv"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold"
                                android:visibility="gone"
                                android:layout_height="wrap_content" />

                        </LinearLayout>




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/orange"
                        android:orientation="vertical"
                        android:id="@+id/ll_add_cart"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:background="@drawable/green_circle"
                            android:src="@drawable/add_rider"
                            android:id="@+id/add_iv"
                            android:tint="@color/white"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="0"

                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"

                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/quantity_tv"
                            android:gravity="center"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/cancel"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:id="@+id/remove_iv"
                            android:background="@drawable/green_circle"
                            android:tint="@color/white"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>