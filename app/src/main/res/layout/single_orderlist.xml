<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear_list"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/rlorderday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#00000000"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/liner_new"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:background="@color/green2"
                    android:layout_marginTop="-3dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:padding="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card"
                    android:layout_below="@+id/liner_new" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pendingorder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="Anuj Vats"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_ordernumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="8dp"
                    android:text="Order Number"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ordernumber"
                    android:layout_marginTop="3dp"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="10dp" />


                <Button
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/tv_date"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="10sp"
                    android:text="Status"
                    android:textColor="@color/white"
                    android:background="@color/red"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rl_allorder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:layout_marginTop="8dp"
                    android:text="Anuj Vats"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:padding="5dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_gravity="top">

                    <ImageView
                        android:id="@+id/iv_booking"
                        android:layout_width="12dp"
                        android:layout_height="18dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/ghanta"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="20:11"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_margin="5dp"
                        android:singleLine="true"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/foodtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="20:11"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:textStyle="bold"
                    android:textSize="8sp"
                    android:padding="3dp"
                    android:layout_margin="5dp"
                    android:singleLine="true"/>




            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

