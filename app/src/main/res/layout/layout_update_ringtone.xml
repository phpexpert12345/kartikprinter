<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/liner_back"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/red"
        >


        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/ic_back"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_8sdp"

             />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Default Order Ringtone"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:id="@+id/txt_ringtone_title"
            android:gravity="center"
            android:padding="5dp"/>

    </LinearLayout>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:visibility="gone"
    android:text="Set Default Order Ringtone"
    android:textColor="@color/black"
    android:id="@+id/txt_order_ringtone"
    android:layout_margin="15dp"
    android:textSize="20sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:id="@+id/recyler_ringtones"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/rounded_border_green"
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="end"
        android:id="@+id/btn_update_ringtone"/>

</LinearLayout>